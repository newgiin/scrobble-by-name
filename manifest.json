{
    "manifest_version": 2,
    "name": "Last.fm Manual Scrobbler",
    "version": "1.0.1",

    "description": "Scrobble whatever you type",
    "icons": {
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    }, 
    "background": {
        "scripts": ["md5.js", "lastfm.js", "background.js"],
        "persistent": false
    },

    "browser_action": {
        "default_icon": {
            "19": "img/icon19.png",
            "38": "img/icon38.png"
        }, 
        "default_popup": "popup.html"
    },
   "web_accessible_resources": [
        "auth_callback.html"
    ],
    "author": "Andrew Nguyen (andruunwien.com)"
}
